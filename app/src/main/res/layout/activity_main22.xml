<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.linquas.myapplication.Main22Activity">

    <ImageView
        android:id="@+id/back22"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back2"/>
    <ImageView
        android:id="@+id/topLayer_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:src="@drawable/top_layer"
        android:background="#00000000"
        />
    <ImageButton
        android:id="@+id/search_btn_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="33dp"
        android:src="@drawable/search_btn"
        android:background="#00000000"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view_all"
        android:layout_below="@id/topLayer_all"
        android:divider="#ffff0000"
        android:dividerHeight="10dp"
        android:scrollbars="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/city_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:text="動植物圖鑑"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/plant_fab_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="42dp"
        android:clickable="true"
        android:src="@drawable/plants_fab"
        android:onClick="plantClick"
        app:backgroundTint="@color/white"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/animal_fab_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="14dp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:src="@drawable/animal_fab"
        app:backgroundTint="@color/white"
        android:layout_above="@id/plant_fab_all"
        android:onClick="animalClick"
        />





</RelativeLayout>
