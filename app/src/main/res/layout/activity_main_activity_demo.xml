<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.linquas.myapplication.MainActivityDemo">

    <ImageView
        android:id="@+id/background_demo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/back"
        />
    <ImageView
        android:id="@+id/transparent_demo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/trans" />

    <ImageView
        android:id="@+id/blur_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
    <!--android:src="@drawable/buttom_blur" />-->

    <ImageView
        android:id="@+id/blackBlur_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="58dp"
        android:src="@drawable/black_blur" />

    <ImageButton
        android:id="@+id/btnGo_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="13dp"
        android:layout_centerHorizontal="true"
        android:background="#00000000"
        android:src="@drawable/go" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_marginBottom= "68dp"
        >
        <ImageView
            android:id="@+id/tem_demo"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tem"/>
        <TextView
            android:id="@+id/temp_value_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:text="27Â°C"
            />

        <ImageView
            android:id="@+id/water_demo"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/water"/>
        <TextView
            android:id="@+id/humid_value_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:layout_marginTop="3dp"
            android:text="30%"
            />
        <ImageView
            android:id="@+id/sun_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sun"/>
        <TextView
            android:id="@+id/sun_value_demo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:textSize="23sp"
            android:textColor="@color/white"
            android:text="0.01"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/name_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/name"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="200dp"
        />
    <ImageButton
        android:id="@+id/all_btn_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#00000000"
        android:layout_marginLeft="126dp"
        android:layout_marginBottom="200dp"
        android:src="@drawable/all_btn"/>

    <ImageView
        android:id="@+id/logo_demo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="470dp"
        />

</RelativeLayout>
